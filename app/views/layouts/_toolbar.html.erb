<div class = "menu">
  <div class = "menu-item">
    <%= link_to home_path_url do %>
      <h2>Home</h2>
    <% end %>
  </div>

  <div class = "menu-item">
    <%= link_to matches_path do %>
      <h2>Show Matches</h2>
    <% end %>
  </div>

  <div class = "menu-item">
    <%= link_to items_path do %>
      <h2>Review Items</h2>
    <% end %>
  </div>

  <% if current_user %>
    <div class = "menu-item">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <h2>Sign Out</h2>
      <% end %>
    </div>
  <% else %>
    <div class = "menu-item">
      <%= link_to new_user_session_path do %>
        <h2>Sign In</h2>
      <% end %>
    </div>
  <% end %>
</div>